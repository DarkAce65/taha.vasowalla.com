{
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": "./",
    "paths": { "~/*": ["./src/*"] },

    "target": "esnext",
    "moduleResolution": "node",

    "allowJs": true,
    "declaration": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true
  },
  "include": ["src/**/*", "node_modules/@types/**/*.d.ts"]
}
