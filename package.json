{
  "name": "taha.vasowalla.com",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "ignore": [
    "**/.*",
    "node_modules",
    "bower_components",
    "test",
    "tests"
  ],
  "scripts": {
    "postinstall": "patch-package",
    "prepare": "husky install",
    "lint": "eslint \"*.config.{js,ts}\" \"utils/**/*.{js,ts}\" \"src/**/*.{js,ts}\"",
    "eslint:fix": "eslint --fix \"*.config.{js,ts}\" \"utils/**/*.{js,ts}\" \"src/**/*.{js,ts}\"",
    "prettier:write": "prettier --write \"*.config.{js,ts}\" \"tsconfig.json\" \"utils/**/*.{js,ts}\" \"src/**/*.{pug,json,js,ts,scss}\"",
    "dev": "vite",
    "preview": "vite preview",
    "build": "tsc && vite build"
  },
  "lint-staged": {
    "*.{ts,js}": "eslint --max-warnings=0",
    "*.{pug,js,ts,scss}": "prettier --list-different",
    "!(*package).json": "prettier --list-different"
  },
  "devDependencies": {
    "@prettier/plugin-pug": "^3.0.0",
    "@rollup/plugin-inject": "^5.0.5",
    "@types/chroma-js": "^2.4.3",
    "@types/eslint": "^8.56.2",
    "@types/eslint-plugin-prettier": "^3.1.3",
    "@types/js-cookie": "^3.0.6",
    "@types/katex": "^0.16.7",
    "@types/node": "^20.11.5",
    "@types/p2": "^0.7.44",
    "@types/pug": "^2.0.10",
    "@types/three": "^0.160.0",
    "@types/uikit": "^3.14.5",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "chalk": "^5.3.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "node-stdlib-browser": "^1.2.0",
    "patch-package": "^8.0.0",
    "picocolors": "^1.0.0",
    "postinstall": "^0.9.0",
    "prettier": "^3.2.4",
    "pug": "^3.0.2",
    "sass": "^1.70.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "vite-plugin-checker": "^0.6.2"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.5.1",
    "@fortawesome/free-regular-svg-icons": "^6.5.1",
    "@fortawesome/free-solid-svg-icons": "^6.5.1",
    "chroma-js": "^2.4.2",
    "gsap": "^3.12.5",
    "js-cookie": "^3.0.5",
    "katex": "^0.16.9",
    "music-metadata-browser": "^2.5.10",
    "p2": "^0.7.1",
    "simplex-noise": "^4.0.1",
    "three": "^0.160.0",
    "three-custom-shader-material": "^5.4.0",
    "uikit": "^3.17.11"
  }
}
