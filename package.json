{
  "name": "taha.vasowalla.com",
  "private": true,
  "sideEffects": false,
  "ignore": [
    "**/.*",
    "node_modules",
    "bower_components",
    "test",
    "tests"
  ],
  "scripts": {
    "postinstall": "patch-package",
    "prepare": "husky install",
    "eslint:fix": "eslint --fix \"*.config.{js,ts}\" \"utils/**/*.{js,ts}\" \"src/**/*.{js,ts}\"",
    "prettier:write": "prettier --write \".eslintrc.js\" \"*.config.{js,ts}\" \"tsconfig.json\" \"utils/**/*.{js,ts}\" \"src/**/*.{pug,json,js,ts,scss}\"",
    "copy:static": "gulp copy:static --silent",
    "dev": "vite",
    "preview": "vite preview",
    "build": "tsc && vite build",
    "build:prod": "cross-env NODE_ENV=production PUBLIC_PATH='/' gulp --silent"
  },
  "lint-staged": {
    "*.ts": "eslint --max-warnings=0",
    "!(*eslintrc).js": "eslint --max-warnings=0",
    "*.{pug,js,ts,scss}": "prettier --list-different",
    "!(*package).json": "prettier --list-different"
  },
  "devDependencies": {
    "@prettier/plugin-pug": "^2.4.1",
    "@rollup/plugin-inject": "^5.0.3",
    "@types/chroma-js": "^2.1.4",
    "@types/eslint": "^8.4.10",
    "@types/eslint-plugin-prettier": "^3.1.0",
    "@types/js-cookie": "^3.0.2",
    "@types/katex": "^0.16.0",
    "@types/node": "^18.11.18",
    "@types/p2": "^0.7.40",
    "@types/prettier": "^2.7.2",
    "@types/pug": "^2.0.6",
    "@types/three": "^0.148.1",
    "@types/uikit": "^3.14.0",
    "@types/wavesurfer.js": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "chalk": "^5.2.0",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "node-stdlib-browser": "^1.2.0",
    "patch-package": "^6.5.1",
    "picocolors": "^1.0.0",
    "postinstall": "^0.8.0",
    "prettier": "^2.8.3",
    "pug": "^3.0.2",
    "sass": "^1.57.1",
    "typescript": "^4.9.4",
    "vite": "^4.0.4",
    "vite-plugin-checker": "^0.5.5"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.2.1",
    "@fortawesome/free-regular-svg-icons": "^6.2.1",
    "@fortawesome/free-solid-svg-icons": "^6.2.1",
    "chroma-js": "^2.4.2",
    "gsap": "^3.11.4",
    "js-cookie": "^3.0.1",
    "katex": "^0.16.4",
    "music-metadata-browser": "^2.5.9",
    "p2": "^0.7.1",
    "simplex-noise": "^4.0.1",
    "three": "^0.149.0",
    "uikit": "^3.15.22",
    "wavesurfer.js": "^6.4.0"
  }
}
