include ../../partials/mixins

doctype html
html
  head
    +head("Minesweeper")
    link(rel="shortcut icon" href="../../assets/icons/mine.png")
    link(rel="stylesheet" type="text/css" href="../../uikit.css")
    link(rel="stylesheet" type="text/css" href="../../global.css")
    link(rel="stylesheet" type="text/css" href="style.css")

  body
    +container(["games", "minesweeper"])
      div(uk-grid)
        div(class="uk-width-medium@m")
          div(uk-sticky="offset: 40; media: @m")
            ul#highscoreTabs.uk-tab-left.uk-tab-stacked(uk-tab="connect: #highscores; swiping: false;")
              li.uk-active: a(href="#") Beginner
              li: a(href="#") Intermediate
              li: a(href="#") Expert
              li#customTab: a(href="#") Custom
            .uk-text-center.uk-text-muted.uk-text-uppercase.uk-text-small
              div(uk-form-custom="target: > * > #scaleLabel")
                select#scale
                  option(value="small") Small
                  option(value="medium") Medium
                  option(value="large") Large
                div Scale:
                  = ' '
                  span#scaleLabel
                  span(uk-icon="icon: triangle-down")
        .uk-width-expand
          .uk-flex-center(uk-grid)
            .uk-width-auto
              .uk-overflow-auto
                #game.size-small
                  #display.uk-flex.uk-flex-between.uk-flex-middle
                    #minesLeft
                    #face
                    #timer
                  #gridContainer
                    table#grid
            .uk-width-expand(style={'min-width': '300px'})
              h3 Highscores
              #highscores.uk-switcher
                each difficulty in ['beginner', 'intermediate', 'expert']
                  .scoreTable.uk-overflow-auto(data-difficulty=difficulty)
                    table.uk-table.uk-table-divider.uk-table-small
                      thead
                        tr
                          th.uk-table-expand Name
                          th Time
                      tbody
                .scoreTable(data-difficulty="custom")
    #customGameModal(uk-modal)
      .uk-modal-dialog
        button.uk-modal-close-default(uk-close)
        .uk-modal-header
          h2.uk-modal-title Custom game
        .uk-modal-body
          .uk-form-horizontal
            .uk-margin
              label.uk-form-label Rows
              .uk-form-controls: input#rows.uk-input(type="number" placeholder="Enter a value between 9 and 24")
            .uk-margin
              label.uk-form-label Columns
              .uk-form-controls: input#cols.uk-input(type="number" placeholder=" Enter a value between 9 and 30")
            .uk-margin
              label.uk-form-label Mines
              .uk-form-controls: input#mines.uk-input(type="number" placeholder=" At least 10")
        .uk-modal-footer.uk-text-right
          button#initialize.uk-button.uk-button-primary(disabled) Ok
