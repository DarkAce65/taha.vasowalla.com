include ../../partials/mixins

doctype html
html
  head
    +head('Image approximation')
    link(rel='shortcut icon', href='/img/icons/tv.png')
    link(rel='stylesheet', type='text/css', href='/uikit.scss')
    link(rel='stylesheet', type='text/css', href='/visual/image-approximation/style.scss')
    script(type='module', src='/visual/image-approximation/script.ts')

  body
    +container(['visual', 'image approximation'])
      .uk-flex-center.uk-margin-bottom(uk-grid, class='uk-child-width-1-2@m')
        .uk-text-center(class='uk-text-right@m')
          #imageContainer.uk-display-inline-block
            canvas#imageCanvas
        .uk-text-center(class='uk-text-left@m')
          #displayContainer.uk-display-inline-block
            canvas#displayCanvas

      .uk-flex.uk-flex-column.uk-flex-middle
        .uk-button-group.uk-margin
          #start.uk-button.uk-button-default.uk-button-small Start
          button.uk-button.uk-button-default.uk-button-small.uk-button-file #[i.far.fa-file-image] Load image
            input#upload(type='file', accept='image/*')
          #blur.uk-button.uk-button-default.uk-button-small Toggle blur

        .uk-form-horizontal.uk-width-1-2
          .uk-margin
            label.uk-form-label Triangles per frame
            .uk-form-controls
              input#triangles.uk-input(type='number')
          .uk-margin
            label.uk-form-label Frames per generation
            .uk-form-controls
              input#frames.uk-input(type='number')
          .uk-margin
            label.uk-form-label Resolution #[span(uk-icon='warning', uk-tooltip='title: High performance impact')]
            .uk-form-controls
              input#resolution.uk-input(type='number')
