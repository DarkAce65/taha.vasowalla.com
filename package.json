{
  "name": "taha.vasowalla.com",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "ignore": [
    "**/.*",
    "node_modules",
    "bower_components",
    "test",
    "tests"
  ],
  "scripts": {
    "postinstall": "patch-package",
    "prepare": "husky",
    "lint": "eslint \"*.config.{js,ts}\" \"utils/**/*.{js,ts}\" \"src/**/*.{js,ts}\"",
    "eslint:fix": "eslint --fix \"*.config.{js,ts}\" \"utils/**/*.{js,ts}\" \"src/**/*.{js,ts}\"",
    "prettier:write": "prettier --write \"*.config.{js,ts}\" \"tsconfig.json\" \"utils/**/*.{js,ts}\" \"src/**/*.{pug,json,js,ts,scss}\"",
    "dev": "vite",
    "preview": "vite preview",
    "build": "tsc && vite build"
  },
  "lint-staged": {
    "*.{ts,js}": "eslint --max-warnings=0",
    "*.{pug,js,ts,scss}": "prettier --list-different",
    "!(*package).json": "prettier --list-different"
  },
  "devDependencies": {
    "@prettier/plugin-pug": "^3.4.2",
    "@rollup/plugin-inject": "^5.0.5",
    "@types/chroma-js": "^3.1.2",
    "@types/eslint": "^9.6.1",
    "@types/eslint-plugin-prettier": "^3.1.3",
    "@types/js-cookie": "^3.0.6",
    "@types/katex": "^0.16.7",
    "@types/node": "^24.10.1",
    "@types/p2": "^0.7.45",
    "@types/pug": "^2.0.10",
    "@types/three": "^0.181.0",
    "@types/uikit": "^3.23.0",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "chalk": "^5.6.2",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "node-stdlib-browser": "^1.3.1",
    "patch-package": "^8.0.1",
    "picocolors": "^1.1.1",
    "postinstall": "^0.11.2",
    "prettier": "^3.7.4",
    "pug": "^3.0.3",
    "sass": "^1.94.2",
    "typescript": "^5.9.3",
    "vite": "^7.2.6",
    "vite-plugin-checker": "^0.11.0"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^7.1.0",
    "@fortawesome/free-regular-svg-icons": "^7.1.0",
    "@fortawesome/free-solid-svg-icons": "^7.1.0",
    "chroma-js": "^3.2.0",
    "gsap": "^3.13.0",
    "js-cookie": "^3.0.5",
    "katex": "^0.16.26",
    "music-metadata-browser": "^2.5.11",
    "p2": "^0.7.1",
    "simplex-noise": "^4.0.3",
    "three": "^0.181.2",
    "three-custom-shader-material": "^6.4.0",
    "uikit": "^3.25.1"
  }
}
