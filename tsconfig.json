{
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": "./",
    "paths": { "~/*": ["./src/*"] },

    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "node",

    "allowJs": true,
    "esModuleInterop": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,

    "types": ["vite/client"]
  },
  "include": ["src/**/*", "utils/**/*", "*.config.ts"]
}
