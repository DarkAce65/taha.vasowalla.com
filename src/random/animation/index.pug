include ../../partials/mixins

doctype html
html
  head
    +head('Animations')
    link(rel='shortcut icon', href='/img/icons/HTML5.png')
    link(rel='stylesheet', type='text/css', href='/uikit.scss')
    link(rel='stylesheet', type='text/css', href='/random/animation/style.scss')
    script(type='module', src='/random/animation/script.js')

  body
    +container(['random', 'animation'])
      div(uk-grid)
        div(class='uk-width-2-3@s')
          canvas#rain
        div(class='uk-width-1-3@s', uk-grid)
          .uk-width-1-2(class='uk-width-1-1@s')
            h4 Rain
            button#rainToggle.uk-button.uk-button-default.uk-button-small Toggle Animation
          .uk-width-1-2(class='uk-width-1-1@s')
            h4 Rain Chance:
            svg(
              xmlns='http://www.w3.org/2000/svg',
              version='1.1',
              height='100',
              width='100',
              viewbox='0 0 64 64'
            )
              g#rainDial
                circle.dial(cx='32', cy='32', r='22')
                path.indicator(d='M32,27 l0,-10')
              g#dialLabels
                path(d='M14,50 l-5,5')
                text(x='12', y='60', font-size='10px') min
                path(d='M50,50 l5,5')
                text(x='53', y='60', font-size='10px', text-anchor='end') max
        div(class='uk-width-2-3@s')
          canvas#bubbles
        div(class='uk-width-1-3@s')
          h4 Bubbles
          button#bubbleToggle.uk-button.uk-button-default.uk-button-small Toggle Animation
